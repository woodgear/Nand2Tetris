/**
 * Demultiplexor:
 * {a, b} = {in, 0} if sel == 0
 *          {0, in} if sel == 1
 */

CHIP DMux {
    IN in, sel;
    OUT a, b;
    PARTS:
    //首先构造出0
    Not(in=sel,out=nots);
    And(a=sel,b=nots,out=zero);

    //利用Mux输出
    Mux(a=in,b=zero,sel=sel,out=a);
    Mux(a=zero,b=in,sel=sel,out=b);
}
